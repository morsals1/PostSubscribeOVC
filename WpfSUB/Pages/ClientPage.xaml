<Page x:Class="WpfSUB.Pages.ClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Клиенты">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель инструментов -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Content="Назад" Click="Back_Click" Margin="5"/>
            <Button Content="Добавить" Click="Add_Click" Margin="5"/>
            <Button Content="Редактировать" Click="Edit_Click" Margin="5" x:Name="EditButton"/>
            <Button Content="Удалить" Click="Delete_Click" Margin="5" x:Name="DeleteButton"/>
            <Button Content="Обновить" Click="Refresh_Click" Margin="5"/>
        </StackPanel>

        <!-- Список клиентов -->
        <ListView Grid.Row="1" Margin="10" x:Name="ClientsListView" SelectionChanged="ClientsListView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" Width="50" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="ФИО" Width="200" DisplayMemberBinding="{Binding FullName}"/>
                    <GridViewColumn Header="Телефон" Width="120" DisplayMemberBinding="{Binding Phone}"/>
                    <GridViewColumn Header="Email" Width="180" DisplayMemberBinding="{Binding Email}"/>
                    <GridViewColumn Header="Дата регистрации" Width="120" 
                                  DisplayMemberBinding="{Binding RegistrationDate, StringFormat=dd.MM.yyyy}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>