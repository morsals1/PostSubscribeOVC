<Page x:Class="WpfSUB.Pages.SubscriptionFormPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Оформление подписки">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Оформление новой подписки" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Форма -->
        <StackPanel Grid.Row="1">
            <Label Content="Клиент:"/>
            <ComboBox x:Name="ClientComboBox" DisplayMemberPath="FullName" Margin="0,0,0,10"/>
            
            <Label Content="Издание:"/>
            <ComboBox x:Name="PublicationComboBox" DisplayMemberPath="Title" Margin="0,0,0,10"/>
            
            <Label Content="Период (месяцев):"/>
            <ComboBox x:Name="PeriodComboBox" SelectedIndex="2" Margin="0,0,0,10">
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="6"/>
                <ComboBoxItem Content="12"/>
                <ComboBoxItem Content="24"/>
            </ComboBox>
            
            <Label Content="Дата начала:"/>
            <DatePicker x:Name="StartDatePicker" SelectedDate="{x:Static System:DateTime.Today}" 
                       Margin="0,0,0,10" xmlns:System="clr-namespace:System;assembly=mscorlib"/>
            
            <Label Content="Дополнительные услуги:"/>
            <StackPanel x:Name="ServicesPanel" Margin="0,0,0,10"/>
            
            <Label Content="Итого к оплате:"/>
            <TextBlock x:Name="TotalPriceText" FontSize="16" FontWeight="Bold" Foreground="Green" Margin="0,0,0,20"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Рассчитать" Click="Calculate_Click" Width="100" Margin="5"/>
            <Button Content="Оформить" Click="Save_Click" Width="100" Margin="5"/>
            <Button Content="Отмена" Click="Cancel_Click" Width="100" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>