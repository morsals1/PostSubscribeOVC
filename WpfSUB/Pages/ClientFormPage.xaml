<Page x:Class="WpfSUB.Pages.ClientFormPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Форма клиента">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Данные клиента" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Форма -->
        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <Label Content="ФИО:"/>
                <TextBox x:Name="FullNameTextBox" Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,0,0,10"/>

                <Label Content="Адрес:"/>
                <TextBox x:Name="AddressTextBox" Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" 
                         Height="60" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,10"/>

                <Label Content="Телефон:"/>
                <TextBox x:Name="PhoneTextBox" Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,0,0,10"/>

                <Label Content="Email:"/>
                <TextBox x:Name="EmailTextBox" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,0,0,10"/>

                <Label Content="Паспортные данные:"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBox x:Name="PassportSeriesTextBox" Width="60" 
                             Text="{Binding PassportSeries, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="0,0,5,0"/>
                    <TextBox x:Name="PassportNumberTextBox" Width="100" 
                             Text="{Binding PassportNumber, UpdateSourceTrigger=PropertyChanged}"/>
                    <Button Content="Сгенерировать" Click="GeneratePassport_Click" 
                            Margin="10,0,0,0" Width="110"/>
                </StackPanel>

                <Label Content="Кем выдан:"/>
                <TextBox x:Name="IssuedByTextBox" Text="{Binding IssuedBy, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,0,0,10"/>

                <!-- Профиль -->
                <Border BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,20,0,10" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Дополнительная информация (профиль)" FontWeight="Bold" Margin="0,0,0,10"/>

                        <Label Content="Дата рождения:"/>
                        <DatePicker SelectedDate="{Binding Profile.Birthday}" Margin="0,0,0,10"/>

                        <Label Content="Телефон (профиль):"/>
                        <TextBox Text="{Binding Profile.Phone, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                        <Label Content="Описание:"/>
                        <TextBox Text="{Binding Profile.Bio, UpdateSourceTrigger=PropertyChanged}" 
                                 Height="60" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,10"/>

                        <Label Content="Предпочтения:"/>
                        <TextBox Text="{Binding Profile.Preferences, UpdateSourceTrigger=PropertyChanged}" 
                                 Height="40" TextWrapping="Wrap" Margin="0,0,0,10"/>

                        <Button Content="Очистить профиль" Click="ClearProfile_Click" 
                                HorizontalAlignment="Left" Width="150"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="SaveButton" Content="Сохранить" Click="Save_Click" 
                    Width="100" Margin="5" FontWeight="Bold"/>
            <Button Content="Отмена" Click="Cancel_Click" Width="100" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>