<Page x:Class="WpfSUB.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Главная"
      Loaded="MainPage_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Шапка с информацией об операторе -->
        <Border Grid.Row="0" Background="#1976D2" Padding="15">
            <DockPanel>
                <!-- Заголовок системы -->
                <TextBlock Text="Система оформления подписки на издания" 
                         Foreground="White" 
                         FontSize="22" 
                         FontWeight="Bold"
                         DockPanel.Dock="Left"/>

                <!-- Информация об операторе и кнопка выхода -->
                <StackPanel Orientation="Horizontal" 
                          HorizontalAlignment="Right" 
                          DockPanel.Dock="Right">
                    <TextBlock Text="Оператор: " 
                             Foreground="White" 
                             FontSize="14"
                             VerticalAlignment="Center"/>
                    <TextBlock x:Name="CurrentOperatorText" 
                             Text="Не авторизован"
                             Foreground="White" 
                             FontSize="14"
                             FontWeight="Bold"
                             VerticalAlignment="Center"
                             Margin="5,0,20,0"/>
                    <Button Content="Выход" 
                            Click="Logout_Click" 
                            Width="80"
                            Background="Transparent"
                            BorderBrush="White"
                            BorderThickness="1"
                            Foreground="White"
                            Cursor="Hand"
                            Padding="5">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                  BorderBrush="{TemplateBinding BorderBrush}"
                                                  BorderThickness="{TemplateBinding BorderThickness}"
                                                  CornerRadius="3">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="Foreground" Value="#1976D2"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Остальная часть MainPage (ваш существующий код) -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <WrapPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Border BorderBrush="#E0E0E0" BorderThickness="1" Margin="10" Padding="10" Width="200">
                    <StackPanel>
                        <TextBlock Text="Клиенты" FontWeight="Bold" Margin="0,0,0,10"/>
                        <Button Content="Список клиентов" Click="Clients_Click" Margin="0,2" Height="30"/>
                        <Button Content="Новый клиент" Click="NewClient_Click" Margin="0,2" Height="30"/>
                    </StackPanel>
                </Border>

                <Border BorderBrush="#E0E0E0" BorderThickness="1" Margin="10" Padding="10" Width="200">
                    <StackPanel>
                        <TextBlock Text="Издания" FontWeight="Bold" Margin="0,0,0,10"/>
                        <Button Content="Список изданий" Click="Publications_Click" Margin="0,2" Height="30"/>
                        <Button Content="Категории" Click="Categories_Click" Margin="0,2" Height="30"/>
                        <Button Content="Прайс-лист" Click="PriceList_Click" Margin="0,2" Height="30"/>
                    </StackPanel>
                </Border>

                <Border BorderBrush="#E0E0E0" BorderThickness="1" Margin="10" Padding="10" Width="200">
                    <StackPanel>
                        <TextBlock Text="Подписки" FontWeight="Bold" Margin="0,0,0,10"/>
                        <Button Content="Список подписок" Click="Subscriptions_Click" Margin="0,2" Height="30"/>
                        <Button Content="Оформить подписку" Click="NewSubscription_Click" Margin="0,2" Height="30"/>
                        <Button Content="Платежи" Click="Payments_Click" Margin="0,2" Height="30"/>
                    </StackPanel>
                </Border>

                <Border BorderBrush="#E0E0E0" BorderThickness="1" Margin="10" Padding="10" Width="200">
                    <StackPanel>
                        <TextBlock Text="Отчеты" FontWeight="Bold" Margin="0,0,0,10"/>
                        <Button Content="Все отчеты" Click="Reports_Click" Margin="0,2" Height="30"/>
                    </StackPanel>
                </Border>
            </WrapPanel>

            <Border Grid.Row="1" Background="#F5F5F5" Padding="10">
                <TextBlock Text="Федеральная почтовая служба - Отдел подписки" 
                         HorizontalAlignment="Center"/>
            </Border>
        </Grid>
    </Grid>
</Page>