<Page x:Class="WpfSUB.Pages.PaymentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Платежи">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Content="Назад" Click="Back_Click" Margin="5" Width="80"/>
            <Button Content="Добавить платеж" Click="Add_Click" Margin="5" Width="120"/>
            <Button Content="Подтвердить" Click="Confirm_Click" Margin="5" Width="100" x:Name="ConfirmButton"/>
            <Button Content="Отклонить" Click="Reject_Click" Margin="5" Width="100" x:Name="RejectButton"/>
            <Button Content="Возврат" Click="Refund_Click" Margin="5" Width="80" x:Name="RefundButton"/>
            <Button Content="Обновить" Click="Refresh_Click" Margin="5" Width="80"/>
            <Button Content="Детали" Click="ViewDetails_Click" Margin="5" Width="80" x:Name="ViewDetailsButton"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10,0,10,10">
            <TextBlock Text="Статус:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="FilterComboBox" Width="150" Height="25" SelectionChanged="FilterComboBox_SelectionChanged">
                <ComboBoxItem Content="Все" Tag=""/>
                <ComboBoxItem Content="Ожидают подтверждения" Tag="ожидает_подтверждения"/>
                <ComboBoxItem Content="Подтверждены" Tag="подтвержден"/>
                <ComboBoxItem Content="Отклонены" Tag="отклонен"/>
            </ComboBox>
            <TextBlock Text="Поиск:" VerticalAlignment="Center" Margin="20,0,5,0"/>
            <TextBox x:Name="SearchTextBox" Width="200" TextChanged="SearchTextBox_TextChanged"/>
            <Button Content="Экспорт" Click="Export_Click" Margin="20,0,0,0" Width="80"/>
        </StackPanel>
        <Border Grid.Row="2" Background="#F5F5F5" Padding="10" Margin="10,0,10,10">
            <TextBlock x:Name="StatsTextBlock" Text="" TextWrapping="Wrap"/>
        </Border>
        <ListView Grid.Row="3" Margin="10" x:Name="PaymentsListView" SelectionChanged="PaymentsListView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Квитанция" Width="100" DisplayMemberBinding="{Binding ReceiptNumber}"/>
                    <GridViewColumn Header="Клиент" Width="130">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Subscription.Client.FullName}" TextWrapping="Wrap" MaxWidth="130"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Издание" Width="130">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Subscription.Publication.Title}" TextWrapping="Wrap" MaxWidth="130"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Сумма" Width="90" 
                                  DisplayMemberBinding="{Binding Amount, StringFormat={}{0:C}}"/>
                    <GridViewColumn Header="Дата" Width="90" 
                                  DisplayMemberBinding="{Binding PaymentDate, StringFormat=dd.MM.yyyy}"/>
                    <GridViewColumn Header="Статус" Width="110" DisplayMemberBinding="{Binding PaymentStatus}"/>
                    <GridViewColumn Header="Способ" Width="90" DisplayMemberBinding="{Binding PaymentMethod}"/>
                    <GridViewColumn Header="Оператор" Width="130" DisplayMemberBinding="{Binding Operator.FullName}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>